<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <title>Perfil </title>
  <% include partials/header %>
  
</head>

<body>

  <header class="sticky">
  <% include partials/nav %>

  </header > <!-- /header -->
  <section id="process" style="padding-left: 4em;">

    <div id="perfil">
      <% if (type != error){%>
      <div align="center">
        <img src="images/user-icon.png" class="img-responsive img-circle" style="width: 12em; height: 12em ;">
      </div>
               
      <div >
        <h2 >
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <%= data.nombres %> <%= data.apellidos %>  
            </div>
          </div>
        </h2>
      </div>

       <div>
         <div class="row">
           <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
             <table>
                 <tbody>
                   <tr>
                     <td class="title">Correo</td>
                     <td><a href="#"><%= data.correo %></a></td>                 
                   </tr>
                   <tr>
                     <td class="title">Ejercicios resueltos</td>
                     <td><%= data.ejerciciosResueltos %></td>           
                   </tr>
                   <tr>
                     <td class="title">Puntaje total</td>
                     <td><%= data.notaTotal %></td>          
                   </tr>
                 </tbody>
            </table>
             
           </div>
         </div>




      </div> 
      <div>
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <% if (data.badges.length == 0){ %>
              <p style="font-size: 1.5em; color: red;"> No tiene logros ganados usted </p>
            <% } else { %>
              <p style="font-size: 1.5em;"> Badges </p>
              <div class="row">
              <% for (i = 0 ; i < data.badges.length ; i++){%>
                <% if (data.badges[i].toLowerCase() == 'novato' ){ %>
                    <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2" style="float: left;">
                      <img src="images/badges/bronze-medal.png" class="img-responsive">

                      <p style=" color: green ;"> Novato %></p>
                    </div>
                    
                <% } %>
                <% if (data.badges[i].toLowerCase() == 'pro' ){ %>
                    <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2" style="float: left;">
                      <img src="images/badges/silver-medal.png" class="img-responsive">
                      <br>
                      <p style=" color: green ;"> PRO %></p>
                    </div>
                    
                <% } %>
                <% if (data.badges[i].toLowerCase() == 'experto' ){ %>
                    <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2" style="float: left;">
                      <img src="images/badges/gold-medal.png" class="img-responsive">
                      <br>
                      <p style=" color: green ;"> Experto  %></p>
                    </div>
                    
                <% } %>
                <% if (data.badges[i].toLowerCase() == 'indestructible' ){ %>
                    <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2" style="float: left;">
                      <img src="images/badges/medal.png" class="img-responsive">
                      <br>
                      <p style=" color: green ;"> Indestructible %></p>
                    </div>
                    
                <% } %>
                <% if (data.badges[i].toLowerCase() == 'duro de matar' ){ %>
                    <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2" style="float: left;">
                      <img src="images/badges/rating.png" class="img-responsive">
                      <br>
                      <p style=" color: green ;"> Duro de matar %></p>
                    </div>
                    
                <% } %>
                <% if (data.badges[i].toLowerCase() == 'rapidos y furiosos' ){ %>

                    <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2" style="float: left;">
                      <img src="images/badges/crown.png" class="img-responsive">
                      <br>
                      <p style=" color: green ;"> Rapidos y Furiosos %></p>
                    </div>
                    
                <% } %>

              <% } %>
              </div>
            <% } %>

          </div>
        </div>
      </div>
      <% } else { %>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <p> <%= data %> </p>
        </div>

      </div>
        <% } %>
      
    </div>

  </section>


  <footer>
    <% include partials/footer %>
  </footer>




  <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
  <script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/dt-1.10.13/datatables.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.1/angular.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.1/angular-route.js"></script>

  <script src="js/perfilV.js"></script>

</body>
</html>
